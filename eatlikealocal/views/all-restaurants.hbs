<h1>All restaurants</h1>

{{>navbarpublic}}

{{#each allRestaurants}}
<div class="card-resto">
    <div>
        <img class="resto-image" src="{{this.picture}}">
    </div>

    <div class="resto-text">
        <h3>{{this.name}}</h3>
        <p>{{this.city}}</p>
        <p>{{this.genre}}</p>
        <p>Recommended by {{this.user.firstname}}</p>
        <p>Added on {{formatDate this.createdAt}}</p>
        <a href="/restaurant/{{this.id}}">See more details</a>
    </div>
</div>
{{/each}}

{{>footersignup}}