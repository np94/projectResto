<div class="top-window">
  <div class="card-title">
    <h1>Eat like a local</h1>
    <h4>Your com <i class="fa fa-heart"></i> </h4>
  </div>
  {{!-- {{> navbardash}} --}}
  <nav>
    <a href="/myprofile">Home</a>
    <a href="/myprofile/dashboard/create">Add a resto</a>
    <a href="/myprofile/dashboard">My recommendations</a>
    <a href="/myprofile/dashboard/comment">My comments</a>

    <form id="logout-form" action="/auth/signout" method="POST">
      <button>Sign out</button>
    </form>
  </nav>
</div>

{{#unless allComments.length}}
<div class="no-com">
  <p>You didn't post comments yet.</p>
  <p>Don't be shy !</p>
</div>

{{/unless}}

{{!-- {{#each allComments}}

<p>{{this.restaurant.name}} : {{this.comment}} Added on: {{formatDate this.updatedAt}} </p>

<a href="/myprofile/dashboard/comment/edit/{{this._id}}" class="fa fa-pen"></a>

<a href="/myprofile/dashboard/comment/delete/{{this._id}}" class="fa fa-trash"></a>

{{/each}} --}}


<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Restaurant</th>
      <th>Comment</th>
      <th>Edit/Delete</th>
    </tr>
  </thead>
  {{#each allComments}}
  <tbody>
    <tr>
      <td>{{formatDate this.updatedAt}}</td>
      <td>{{this.restaurant.name}}</td>
      <td class="table-com">{{this.comment}}</td>
      <td><a href="/myprofile/dashboard/comment/edit/{{this._id}}" class="fa fa-edit manage-com"></a>
        <a href="/myprofile/dashboard/comment/delete/{{this._id}}" class="fa fa-trash manage-com"></a>
      </td>
    </tr>
  </tbody>
  {{/each}}
</table>


</div>